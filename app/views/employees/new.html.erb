
<div class="sign-up"><h1>Enter your info Employee</h1></div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

		<%= form_for @employee do |f| %>

		<!-- Displays the errors  -->
      	  <%= render 'shared/error_messages', object: f.object %>

      	  <div class="col-md-12">
		  	<div class="col-md-2"><%= f.label :name %></div>
		  	<div class="col-md-5 col-md-offset-1"><%= f.text_field :name,  class: 'form-control'%></div>
		  </div>

		  <div class="col-md-12">
		  	<div class="col-md-2"><%= f.label :surname %></div>
		  	<div class="col-md-5 col-md-offset-1"><%= f.text_field :surname,  class: 'form-control'%></div>
		  </div>
		  <div class="col-md-12">
			  <div class="col-md-3"><%= f.label :birth_date %></div>
			  <div class="col-md-3"><%= select_tag(:birth_date_day, options_for_select(@days), class: 'form-control') %></div>
			  <div class="col-md-3"><%= select_tag(:birth_date_month, options_for_select(@months), class: 'form-control') %></div>
			  <div class="col-md-3"><%= select_tag(:birth_date_year, options_for_select(@years), class: 'form-control') %></div>  		
		  </div>  		 

		  <div class="col-md-12">
			  <div class="col-md-3"><%= f.label :hired_date %></div>
			  <div class="col-md-3"><%= f.text_field :hired_date,  class: 'form-control datetimepicker'%></div>
		  </div>

		  <div class="col-md-12">
			  <div class="col-md-2"><%= f.label :username %></div>
			  <div class="col-md-5 col-md-offset-1"><%= f.text_field :username, class: 'form-control' %></div>
		  </div>

		  <div class="col-md-12">
			  <div class="col-md-2"><%= f.label :password %></div>
			  <div class="col-md-5 col-md-offset-1"><%= f.text_field :password, class: 'form-control' %></div>
		  </div>

		  <div class="col-md-12">
			  <div class="col-md-2"><%= f.label :email %></div>
			  <div class="col-md-5 col-md-offset-1"><%= f.text_field :email, class: 'form-control' %></div>
		  </div>

		  <div class="col-md-12">
		  	<div class="col-md-2"><%= f.label :position_id %></div>
		  	<div class="col-md-5 col-md-offset-1">
		  		<%= select_tag(:position_id, options_for_select(@positions), class: 'form-control') %>
		  	</div>
		  </div>

		  <%= f.submit "Create my account", class: "btn btn-primary create-employee-btn" %>
		  
		<% end %>
	</div>
</div>