<% if object.errors.any? %>

  <!-- error_explanation class used for styling the errors. It automatically adds field_with_errors class to all the 
      errors which are supposed to be listed.
  --> 
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(object.errors.count, "error") %>.
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>