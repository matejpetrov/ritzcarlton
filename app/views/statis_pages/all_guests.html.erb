<p>Display all the guests of the current employee</p>

<% if @guests.any? %>
  <h3>Guests (<%= @guests.count %>)</h3>
  <ol id="guests">    
    <%= render @guests %>	
  </ol>  
<% end %>

<div class="row" style="margin-top: 50px;">
 <div class="col-md-6">
 	<%= render 'shared/guests_form' %>
 </div>
</div>


